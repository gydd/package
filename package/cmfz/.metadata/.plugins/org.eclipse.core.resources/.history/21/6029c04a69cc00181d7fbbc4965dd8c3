<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
		xmlns:context="http://www.springframework.org/schema/context" 
		xmlns:aop="http://www.springframework.org/schema/aop" 
		xmlns:mvc="http://www.springframework.org/schema/mvc" 
		xmlns:tx="http://www.springframework.org/schema/tx"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://www.springframework.org/schema/beans 
			http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-3.2.xsd 
			http://www.springframework.org/schema/aop
			http://www.springframework.org/schema/aop/spring-aop-3.2.xsd 
			http://www.springframework.org/schema/mvc
			http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd ">
			
<!-- 注解包扫描 -->
<context:component-scan base-package="com.yhao.service"></context:component-scan>

<!-- 引入小配置文件 -->
<context:property-placeholder location="classpath:mysql.properties"/>

<!-- 数据源 -->
<bean id="ds" class="org.apache.commons.dbcp.BasicDataSource">
	<property name="driverClassName" value="${mysql.driver}"></property>
	<property name="url" value="${mysql.url}"></property>
	<property name="username" value="${mysql.username}"></property>
	<property name="password" value="${mysql.password}"></property>
</bean>

<!-- 工厂 -->
<bean id="factory" class="org.mybatis.spring.SqlSessionFactoryBean">
	<property name="dataSource" ref="ds"></property>
	<property name="mapperLocations" value="classpath:com/yhao/mapper/*Mapper.xml"></property>
</bean>

<!-- dao -->
<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
	<property name="sqlSessionFactoryBeanName" value="factory"></property>
	<property name="basePackage" value="com.yhao.dao"></property>
</bean>

<!-- 事务管理器 -->
<bean id="tm" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
	<property name="dataSource" ref="ds"></property>
</bean>

<!-- 事务注解生效 -->
<tx

</beans>
